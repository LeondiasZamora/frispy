<div class="tada">

<img src="<%=@recipe.image%>" alt="image of the recipe" id="recipe-image">
<div id="back-x">
  <%= link_to "+", recipes_path, id:"back-x-self"%>
</div>
<div class="bg-white white-recipe-background">
  <div class="recipe-card mx-auto">
    <h2 class="mt-3 w-75 text-center"><%= @recipe.name %></h2>
    <div class="mt-5">
      <div class="rectangle-row">
        <div class="rectangle carbs"><%= @recipe.calories%>g</div>
        <div class="rectangle protein"><%= @recipe.sugar%>g</div>
        <div class="rectangle fats"><%= @recipe.fat %>g</div>
      </div>
      <div id="legend" class="mb-5">
        <div class="legend-element">
          <div id="orange-legend" class="me-1"></div><div>= kcal</div>
        </div>
        <div class="legend-element">
          <div id="red-legend" class="me-1"></div><div>= sugar</div>
        </div>
        <div class="legend-element">
          <div id="blue-legend" class="me-1"></div><div>= fat</div>
        </div>
      </div>
    <div>
    <div class ="border-buttons border-bottom mb-4 mt-4"></div>
      <h5 class="mt-5">Instructions:</h5>
      <ol>
        <%@recipe.instructions.split(".").each do |instruction|%>
          <li id="list-item-recipe" class="mt-3"><%= instruction%></li>
        <%end%>
      </ol>
    </div>
  </div>
</div>
<footer class="text-center mt-5">
      <p class="text-muted">&copy; <%= Time.current.year %> Frispy</p>
    </footer>
</div>
</div>
