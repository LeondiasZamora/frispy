<div class="tada">

<%# <h2 class="text-center my-4">Your saved Recipes</h2> %>
<nav class="navbar frispy-navbar sticky-top">
  <div class="container-fluid d-flex justify-content-between align-items-center py-3">
    <div class="d-flex align-items-center mx-auto">
      <h2 class="ms-3 text-white text-decoration-none fw-bold">Your saved recipes</h2>
    </div>

    <div class="dropdown me-4">
      <i class="fa-solid fa-bars text-white" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "About", root_path, class: "dropdown-item" %>
        <%= link_to "Favorite recipes", recipes_path, class: "dropdown-item" %>
        <%= link_to "To Inventory", food_items_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
      </div>
    </div>
  </div>
</nav>



<div class="container">
  <% @recipes.each do |recipe|%>
      <div data-controller="further-info" data-action="click->further-info#toggle" >
        <div class="card-product mt-3 rounded-3">
          <img src="<%= recipe.image%>" />
          <div class="card-product-infos ">
            <h2><%= recipe.name%></h2>
            <p>preparation time: <%= recipe.preparation_time%>min</p>
            <p>fat: <%= recipe.fat%></p>
            <p>calories: <%= recipe.calories%></p>
            <p>sugar: <%= recipe.sugar%></p>
          </div>
        <%= link_to "select", recipe_path(recipe), class:"text-decoration-none text-black mt-auto mb-3 me-3" %>
        <%= link_to "🗑️", recipe_path(recipe), data: { turbo_method: "delete", turbo_confirm: "Are you sure ?"}, class:"mt-auto me-3 mb-3" %>
        </div>
          <div class="hidden-info d-none bg-white" data-further-info-target="info">
          <h3 class="text-center mt-2">Steps: </h3>
          <ol class="mt-3">
            <%splitted_array = recipe.instructions.split('.')%>
            <%splitted_array.each do |instruction|%>
              <li id="list-item-recipe"><%= instruction%></li>
            <%end%>
          </ol>
        </div>
      </div>
  <% end %>
  <div class="d-flex justify-content-center">
    <button class="btn btn-secondary my-4 ms-3 py-2 px-3 back-button-recipe">
      <%= link_to "Back", food_items_path, class:"text-decoration-none text-white"%>
    </button>
  </div>
</div>

</div>
