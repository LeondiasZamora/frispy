<!-- Navbar -->
<nav class="navbar frispy-navbar">
  <div class="container-fluid">
    <span class="navbar-brand text-white fw-bold">Frispy</span>

    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn login-btn" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "btn login-btn" %>
      <% end %>
    </div>
  </div>
</nav>

<div class="container vh-100 d-flex flex-column text-center">

  <!-- Image -->
  <div class="text-center mt-3">
    <%= image_tag "frispy_logo.png", alt: "Frispy Banner", class: "frispy-image" %>
  </div>

  <!-- Body -->
  <div class="mt-3">
    <h2 class="fw-bold">Frispy: Your Recipe for Less Waste</h2>
    <hr class="my-4 w-50 mx-auto" />

    <p class="text-muted">
      Frispy keeps your fridge crisp and your meals fresh! Track expiry dates, cut waste, and whip up recipes with easeâ€”Frispy is freshness made simple.
