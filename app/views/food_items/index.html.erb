  <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap">
    <div class="d-flex align-items-center flex-grow-1">
      <span class="navbar-brand text-white fw-bold me-3">Frispy</span>

      <%= form_with url: food_items_path, method: :get, class: "search-form d-flex align-items-center flex-grow-1" do %>
