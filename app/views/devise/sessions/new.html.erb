<div style="margin-top: 20%">
  <div class="d-flex justify-content-center align-items-center mb-5">
    <%= image_tag "frispy_logo.svg", width: 150, height: 150, class:"me-3"%>
  </div>


  <div class="text-center intro-phrase" >Sign in to your account</div>
  <div class="container d-flex flex-column justify-content-center px-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="w-100 d-flex justify-content-between align-items-center">
        <%= render "devise/shared/links" %>
        <button class="form-actions sign-up-button" >
          <%= f.button :submit, "Log in", class:"text-white p-2"%>
        </button>
      </div>
    <% end %>
  </div>
</div>
